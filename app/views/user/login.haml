= stylesheet_link_tag "/stylesheets/bootstrapValidator.min.css"
= javascript_include_tag "/javascripts/bootstrapValidator.js"

.row
  .page-header
    %h1 登陆

  - form_for @user, "/user/login", id: "loginForm", class: "form-horizontal", role: "form" do |f|
    .form-group
      = f.label "邮箱", class: "col-lg-2 control-label"
      .col-lg-6
        = f.text_field :email, class: "form-control"
    .form-group
      = f.label "密码", class: "col-lg-2 control-label"
      .col-lg-6
        = f.password_field :password, class: "form-control"
    .form-group
      .col-lg-offset-2.col-lg-4
        = f.submit "提交", class: "btn btn-default"

= stylesheet_link_tag "bootstrapValidator.css"
= javascript_include_tag "bootstrapValidator.js"
= javascript_include_tag "user_login.js"
