-#encoding: utf-8
.row
  %h1{style:"display:inline-block;"} 更新日志
  = link_to "添加", "/cpanel/change_log/new", class: "btn btn-sm btn-default", style: "margin-bottom: 15px;"

.row{style: "margin-top: 5px; background: white;"}
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th 标题
        %th 内容
        %th 标签
        %th 公开
        %th 编辑
    %tbody
      - @change_logs.each do |change_log|
        %tr
          %td= change_log.title
          %td= change_log.content.split(/\n/).join("<br>")
          %td= change_log.tag.split(/\s+/).join(",")
          %td= change_log.publish ? "Y" : "N"
          %td
            = link_to "明细", "/cpanel/change_log/%d" % change_log.id 
            |
            = link_to "编辑", "/cpanel/change_log/%d/edit" % change_log.id
