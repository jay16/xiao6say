-# coding: UTF-8
%nav.navbar.navbar-default{role: "navigation", style:"margin-bottom:0px;"}
  .container
    %div{class: "#{mobile? ? 'col-sm-12' : 'col-sm-8 col-sm-offset-2'}", style: "padding-left:0px;padding-right:0px;"}
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to Settings.website.title, "/", class: "navbar-brand"
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse{role: "navigation", id:"bs-example-navbar-collapse-1"}
        %ul.nav.navbar-nav
          %li.active= link_to "概况", "/cpanel"
          %li= link_to "微信用户", "/cpanel/weixiners"
          %li.hidden= link_to "微信消息", "/cpanel/messages"
          %li= link_to "例句解析", "/cpanel/phantoms"
          %li= link_to "更新日志", "/cpanel/change_log"

        %input#navbar_right_lis{type: "hidden", value: 1}/
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.glyphicon.glyphicon-cog
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "/user"}
                  %i.glyphicon.glyphicon-wrench
                  返回前台 
              %li.divider
              %li
                %a{:href => "/user/logout"}
                  %i.glyphicon.glyphicon-log-out
                  退出
