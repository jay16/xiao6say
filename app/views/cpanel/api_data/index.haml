-#encoding: utf-8
.row{style: "height:70px;"}
  %h1{style: "display: inline-block;"} 客户端数据
:css
  .table .tv {
    text-align: center;
    vertical-align: middle;
    max-width: 20px;
  }
.row{style: "margin-top: 5px; background: white;"}
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th latest 15 rows(#{@api_datas.count})
        %th device
        %th date 
    %tbody
      - @api_datas.first(15).each do |data|
        %tr
          %td= data.data
          %td= data.device.split(/,/).first.split(/:/).last rescue data.device
          %td= data.created_at.strftime("%m/%d %H:%M")

